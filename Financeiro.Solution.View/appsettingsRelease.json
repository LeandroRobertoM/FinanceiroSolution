{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
    "Serilog": {
      "Using": [ "Serilog.Sinks.File" ],
      "MinimumLevel": "Debug",
      "WriteTo": [
        {
          "Name": "File",
          "Args": {
            "path": "{CaminhoArquivoLog_ApiControleFinanceiro}",
            "rollingInterval": "Day",
            "retainedFileCountLimit": 10,
            "rollOnFileSizeLimit": true,
            "fileSizeLimitBytes": 10485760,
            "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
          }
        }
      ]
    },

  "ConnectionStrings": {
    "SqlConnection": "{ConnectionControleFinanceiro}",
    "MasterConnection": "{ConnectionControleFinanceiroMaster}"
  },
  "AllowedHosts": "*"
}
